<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.project2.faceoff.LoginActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="250dp"
            android:text="TextView"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="400dp"
            android:text="주의 사항 : 선택하신 사진은 한 사람의 정면 사진이어야 합니다." />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="150dp"
            android:layout_height="145dp"
            android:layout_alignBottom="@+id/wv"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            app:srcCompat="@drawable/kakao_default_profile_image" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="150dp"
            android:layout_height="145dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView6"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gallery" />

        <Button
            android:id="@+id/button6"
            android:layout_width="158dp"
            android:layout_height="41dp"
            android:layout_alignEnd="@+id/imageView6"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignRight="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="14dp"
            android:onClick="withProfileImage"
            android:text="카톡 프사로 하기"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="368dp" />

        <Button
            android:id="@+id/button8"
            android:layout_width="158dp"
            android:layout_height="41dp"
            android:layout_alignLeft="@+id/imageView8"
            android:layout_alignStart="@+id/imageView8"
            android:layout_alignTop="@+id/button6"
            android:onClick="withGalleryImage"
            android:text="갤러리에서 가져오기"
            android:layout_alignRight="@+id/imageView8"
            android:layout_alignEnd="@+id/imageView8" />

        <WebView
            android:id="@+id/wv"
            android:layout_width="150dp"
            android:layout_height="145dp"
            android:layout_above="@+id/button6"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:layout_marginBottom="24dp" />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
